# Sample environment variables for VRAgent backend
# Copy this file to .env and fill in the values

# Database connection string (required)
# For local development:
DATABASE_URL=postgresql+psycopg2://vragent:vragent_secret@localhost:5432/vragent
# For Docker:
# DATABASE_URL=postgresql+psycopg2://vragent:vragent_secret@db:5432/vragent

# Redis connection string (required)
# For local development:
REDIS_URL=redis://localhost:6379/0
# For Docker:
# REDIS_URL=redis://redis:6379/0

# Environment: development, test, or production
ENVIRONMENT=development

# Google Gemini API (optional - features degrade gracefully without it)
# Get your API key from https://ai.google.dev/
GEMINI_API_KEY=
GEMINI_MODEL_ID=gemini-pro
