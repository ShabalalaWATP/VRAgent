# VRAgent Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=vragent
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=vragent

# ============================================
# APPLICATION SETTINGS
# ============================================
# Options: development, production
ENVIRONMENT=development

# ============================================
# SECURITY - JWT SECRET KEY (REQUIRED)
# ============================================
# Generate a strong secret key using:
#   python -c "import secrets; print(secrets.token_urlsafe(64))"
# NEVER use the default value in production!
SECRET_KEY=CHANGE_ME_GENERATE_A_STRONG_SECRET_KEY

# ============================================
# AI/ML API KEYS (Optional - features degrade gracefully)
# ============================================

# Google Gemini API key for AI-powered exploitability analysis
# Get one at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL_ID=gemini-3-flash-preview

# ============================================
# DYNAMIC SCANNER AGENTIC SETTINGS
# ============================================
# Maximum number of agentic decisions per scan
DYNAMIC_SCAN_AGENT_MAX_STEPS=12
# Maximum duration (minutes) for agentic loop
DYNAMIC_SCAN_AGENT_MAX_MINUTES=45
# Stop after this many no-progress steps
DYNAMIC_SCAN_AGENT_MAX_NO_PROGRESS=3
# Max seconds to wait for a single agentic action
DYNAMIC_SCAN_AGENT_ACTION_TIMEOUT=1200

# ============================================
# GHIDRA CONFIGURATION (Optional - Auto-configured in Docker)
# ============================================
# Ghidra is automatically installed in Docker containers at /opt/ghidra
# These settings are only needed for local development outside Docker
# Example (Windows):
# GHIDRA_HOME=C:\ghidra_11.2.1_PUBLIC
# GHIDRA_HEADLESS_PATH=C:\ghidra_11.2.1_PUBLIC\support\analyzeHeadless.bat
# Example (Linux):
# GHIDRA_HOME=/opt/ghidra
# GHIDRA_HEADLESS_PATH=/opt/ghidra/support/analyzeHeadless
GHIDRA_HOME=
GHIDRA_HEADLESS_PATH=

# ============================================
# OCR / TESSERACT (Optional)
# ============================================
# If Tesseract is installed but not on PATH, set the full path:
# Example (Windows):
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
# Example tessdata path (Windows):
# TESSDATA_PREFIX=C:\Users\YourUser\AppData\Local\Tesseract-OCR\tessdata
TESSERACT_CMD=
TESSDATA_PREFIX=

# NVD API key for enhanced CVE lookups (increases rate limit from 5 to 50 req/30s)
# Get one at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# ============================================
# REVERSE ENGINEERING SIGNATURE SETTINGS
# ============================================
YARA_RULES_PATH=backend/yara_rules
CAPA_PATH=capa
ENABLE_CAPA=true

# ============================================
# DOCKER SERVICE CREDENTIALS (Required for docker-compose)
# ============================================
# These credentials are used by docker-compose.yml for container services.
# Generate secure passwords with: python -c "import secrets; print(secrets.token_urlsafe(16))"

# OpenVAS (Greenbone Vulnerability Scanner)
OPENVAS_USER=vragent_openvas
OPENVAS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Grafana (Metrics Dashboard)
GRAFANA_USER=vragent_grafana
GRAFANA_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# ZAP API Key (leave empty to disable API key requirement - fine for local dev)
ZAP_API_KEY=
